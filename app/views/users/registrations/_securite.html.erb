
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<div class="container container-infos">
  <p class= "text-center">Vous pouvez mettre à jour votre email ci dessous (votre mot de passe sera nécessaire) :</p>

  <form>
   <div class="row">
    <div class="col">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="change-mdp">
    <p class= "text-center"><strong>Changer votre mot de passe</strong></p>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>


  <div class="col">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="col">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
</div>
</form>
<div class="bouton space-btn">
  <%= f.submit "Update", class: "btn-blue w-100" %>
  </div>
    </form>
<% end %>

  <div class="change-mdp">
    <p class= "text-center"><strong> Supprimer mon compte</strong></p>
  </div>
  <p class="text-center">Attention, cette action est irréversible</p>
  <div class="bouton space-btn">

<p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  class: "btn-blue w-100"  %></p>

  </div>
</div>
